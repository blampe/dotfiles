{
  "coc.preferences.formatOnSaveFiletypes": [
    "bash",
    "css",
    "dockerfile",
    "go",
    "javascript",
    "json",
    "markdown",
    "python",
    "ruby",
    "sh",
    "terraform",
    "tex",
    "typescript",
    "yaml"
  ],

  "diagnostic.checkCurrentLine": true,
  "diagnostic.enable": true,
  "diagnostic.locationlistUpdate": true,
  "diagnostic.messageDelay": 0,

  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    }
  },

  "git.addGBlameToVirtualText": true,

  "go.goplsOptions": {},

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "disableWorkspaceFolders": false,
      "filetypes": ["go"],
      "initializationOptions": {
        "completeUnimported": true
      }
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "79"],
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,

  "prettier.disableSuccessMessage": true,

  "solargraph.diagnostics": true,
  "solargraph.hover": true,

  "suggest.numberSelect": false,
  "suggest.removeDuplicateItems": true,

  "texlab.build.onSave": true,
  "texlab.build.executable": "/Library/TeX/texbin/pdflatex",
  "texlab.chktex.onEdit": true,
  "texlab.latexindent.modifyLineBreaks": true,

  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  }
}
