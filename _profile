# If not running interactively, don't do anything
[ -z "$PS1" ] && return

export DEV_IP=10.10.1.114
export HOME_IP=boombox.dyndns.info
export WORK_IP=

# OS X terminal colors
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

# bash settings
export HISTCONTROL=ignoredups:erasedups  # no duplicate entries
export HISTSIZE=100000                   # big big history
export HISTFILESIZE=100000               # big big history
export HISTIGNORE="history *:cd *:df *:exit:e:fg:bg:file:e *:ll:ls:mc:top:"
export INPUTRC=~/.inputrc
# Ignore these filetypes when tab completing
export FIGNORE=.pyc
# append to the history file, don't overwrite it
shopt -s histappend
# check the window size after each command and, if necessary, update the values of LINES and COLUMNS.
shopt -s checkwinsize
# enable bash completion in interactive shells
if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

# python settings
if [ -d ~/py-lib ] ; then
	export PYTHONPATH=~/py-lib:$PYTHONPATH
fi

# MacPorts
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
export CPPFLAGS="-I/opt/local/include"
export MANPATH=/opt/local/share/man:/opt/local/man:/usr/share/man:/usr/local/share/man
export LDFLAGS="-L/opt/local/lib"

if [ -d ~/bin ]; then
	export PATH="${PATH}:~/bin"
fi

# junit tests for code reviews
export JUNIT_HOME="/Developer"
export PATH="/usr/local/bin:/usr/local/sbin:$PATH:$JUNIT_HOME"
export CLASSPATH="$CLASSPATH:$JUNIT_HOME/junit-4.9b2.jar"

# grab any local includes
if [ -d ~/.includes ]; then
    for file in ~/.includes/*; do
        . $file
    done
fi

PS1='\[\e[1;34m\]\u\[\e[0;39m\]@\[\e[1;32m\]\h\[\e[0;39m\]:\[\e[1;33m\]\w\[\e[0;39m\]$(__git_ps1 " \[\e[1;36m\](%s)\[\e[0;39m\] ")\$ '

if [[ $YELPCODE ]] ; then
	cd $YELPCODE
else
	# If I can connect to work, then do it
	ping -c 1 -t 1 $DEV_IP &> /dev/null && go
fi

